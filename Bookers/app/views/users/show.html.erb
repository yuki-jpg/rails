       <h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
<div class="field row">

    <h4>Title</h4>
    <%= f.text_field :title, class:"form-control" %>
</div>
<div class="field row">
    <h4>Opinion</h4>
    <%= f.text_area :body, class:"form-control" %>
</div>
<div class="actions row">
    <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book" />
  </div>

<% end %>
  </div>




<div class='col-xs-9'>
<h2>Books</h2>

<table class='table table-hover table-inverse'>
<thead>
  <tr>
  	<th></th>
    <th>Tittle</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
</thead>
 <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>

    </tr>
  <% end %>
</tbody>
</table>
</div>
